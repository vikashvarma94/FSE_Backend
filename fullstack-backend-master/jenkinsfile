pipeline {
    agent any
    stages {
        stage('Commit SCM') {
            agent{
                docker{
                    image 'maven'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                script{
                    echo 'MVN Build'
                    cmd "mvn clean install"
                }
            }
        }
        stage('Build') {
            steps{
                script{
                    cmd 'docker build . -t vikashvarma94/fseb:1'
                    withCredentials([string(credentialsId: '', variable: 'docker_password')])
                    cmd 'docker login -u vikashvarma94 -p $docker_password'
                    cmd 'docker push vikashvarma94/fseb:1'
                }
            }

        }
    }
    }